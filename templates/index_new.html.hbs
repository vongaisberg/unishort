{{#*inline "page"}}
<div style="max-width: 800px; margin: auto; margin-top: 10%;">
    <h1 style="font-size: 3.5em; "><span class="gradient-text">Make your links this <span
                class="non-transparent">ü§è</span> short</span></h1><br>
    <h5>pinch.to produces the shortest URLs in the world by using the full spectrum of unicode characters.</h5>
    <div id="box">
        <form action="/" method="post">
            <!-- <label for="url_long">Enter your long URL here:</label> -->
            <input placeholder="Paste your long URL here" pattern="{{regex}}" required autofocus id="url_long"
                name="url_long">
            <button id="submit" type="submit">Shorten Now!</button>
        </form>
    </div>


</div>

<div style="overflow-x:auto;">
    <div class="results">
        <table>
            <tr class="header">
                <th class="short_url">Short Link</th>
                <th class="long_url">Original Link</th>
                <th class="qr">QR</th>
                <th class="clicks">Clicks</th>
                <th class="date">Date</th>
            </tr>
            {{#each links}}
            <tr>
                <td class="short_url"><input class="short_url" type="text" value="{{../server_url}}/{{short_url}}" readonly
                        onClick="this.select();">
                        <img class="copy" src="https://pinch.to/static/copy.svg" alt="{{../server_url}}/{{short_url}}" onClick="navigator.clipboard.writeText(this.alt); this.src='https://pinch.to/static/check.svg'">
                </td>
                <td class="long_url">
                    <span class="no_linebreak">
                        <img class="favicon" src='https://www.google.com/s2/favicons?domain={{url}}' />
                        <a href="{{../server_url}}/{{short_url}}" rel="nofollow">{{{url}}}</a>
                    </span>
                </td>
                <td class="qr"><img class="qr" src="https://pinch.to/qr/?data={{../server_url}}/{{short_url}}">
                </td>
                <td>{{clicks}}</td>
                <td class="date"><span class="timestamp">{{timestamp}}</span></td>
            </tr>
            {{/each}}
